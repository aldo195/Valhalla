#search
    md-card#search-card
        md-card-title
            md-card-title-text
                span.md-headline Valhalla Demo
        md-card-content
            md-list(flex)
                md-list-item
                    md-input-container
                        label Select a raid
                        md-select(ng-model="searchVm.selected.target")
                            md-option(ng-repeat="target in searchVm.targets", ng-value="target")
                                | {{ target.name }}
                md-list-item
                    label Choose folder for dropping the malware:
                        input(ng-model="searchVm.malwarePath", valhalla-enter="searchVm.createRaid()")

                p Copy this raid ID into your powershell file cuz linking aint ez: {{ searchVm.raidId }}
                // TODO: Enable downloading powershell file