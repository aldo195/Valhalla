#search
    md-card#search-card
        md-card-title
            md-card-title-text
                span.md-headline {{ searchVm.title }}
        md-card-content
            md-list(flex)
                md-list-item
                    label Title
                        input(ng-model='searchVm.title')
                    span  (Hint: Change me!)

                md-list-item
                    label Term
                        input(ng-model='searchVm.searchTerm', ng-init="searchVm.searchTerm", valhalla-enter="searchVm.search(searchVm.searchTerm)")
                    span  (Hint: Enter on me!)

                md-list-item(ng-repeat="result in searchVm.searchResults")
                    strong Name:
                    span  {{ result.name }}
                    br
                    strong Data:
                    div(ng-bind-html="result.data")

                md-list-item
                    md-input-container
                        label Select a target
                        md-select(ng-model="searchVm.selected.target")
                            md-option(ng-repeat="target in searchVm.targets", ng-value="target.name")
                                | {{ target.name }}
